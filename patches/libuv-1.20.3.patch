# requires
REQUIRES="autotools-wrappers-lt-build"

pkg-config --exists --print-errors $REQUIRES || exit 1

# configure (ac-2.69; am-1.14; lt-2.4.2)
libtoolize -c -f; aclocal; autoconf; automake -a -c
./configure --disable-static --prefix=

# build
make

# install
install -d $DESTDIR/include
install -m 644 include/uv.h $DESTDIR/include
install -m 644 include/uv-errno.h $DESTDIR/include
install -m 644 include/uv-linux.h $DESTDIR/include
install -m 644 include/uv-threadpool.h $DESTDIR/include
install -m 644 include/uv-unix.h $DESTDIR/include
install -m 644 include/uv-version.h $DESTDIR/include
install -d $DESTDIR/lib
install .libs/libuv.so.1.* $DESTDIR/lib/libuv.so.1
ln -sf libuv.so.1 $DESTDIR/lib/libuv.so
install -d $DESTDIR/lib/pkgconfig
install -m 644 libuv.pc $DESTDIR/lib/pkgconfig

# build.pc
install -d $DESTDIR/share/pkgconfig
cat > $DESTDIR/share/pkgconfig/libuv-build.pc << EOF
Name: libuv
Version: 1.20.3
Description: asynchronous event notification library
Requires: $REQUIRES

devel=\\
/include/uv.h \\
/include/uv-errno.h \\
/include/uv-linux.h \\
/include/uv-threadpool.h \\
/include/uv-unix.h \\
/include/uv-version.h \\
/lib/libuv.so \\
/lib/pkgconfig/libuv.pc

exec=\\
/lib/libuv.so.1
EOF

exit
