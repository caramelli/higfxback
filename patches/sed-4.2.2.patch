# requires
REQUIRES="autotools-wrappers-am-build"

if ! pkg-config --exists --print-errors $REQUIRES; then exit 1; fi

# configure (ac-2.69; am-1.12)
aclocal -I m4; autoconf; autoheader -f; automake -a -c
./configure --prefix=

# build
make

# install
install -d $DESTDIR/bin
install sed/sed $DESTDIR/bin

# build.pc
install -d $DESTDIR/share/pkgconfig
cat > $DESTDIR/share/pkgconfig/sed-build.pc << EOF
Name: sed
Version: 4.2.2
Description: GNU sed
Requires: $REQUIRES

exec=\\
/bin/sed
EOF

exit
