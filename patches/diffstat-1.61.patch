# requires
REQUIRES="autotools-wrappers-ac-build"

pkg-config --exists --print-errors $REQUIRES || exit 1

# configure (ac-2.52.20150926)
autoconf
./configure --prefix=

# build
make

# install
install -d $DESTDIR/bin
install diffstat $DESTDIR/bin

# build.pc
install -d $DESTDIR/share/pkgconfig
cat > $DESTDIR/share/pkgconfig/diffstat-build.pc << EOF
Name: diffstat
Version: 1.61
Description: Utility providing statistics based on diff output
Requires: $REQUIRES

devel=\\
/bin/diffstat
EOF

exit

