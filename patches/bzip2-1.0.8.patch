# requires
REQUIRES="make-build"

pkg-config --exists --print-errors $REQUIRES || exit 1

# configure
sh ./Configure --prefix

# build
make -f Makefile-libbz2_so

# install
install -d $DESTDIR/bin
install bzdiff $DESTDIR/bin
