cat > $DESTDIR/share/pkgconfig/bzip2-build.pc << EOF
Name: bzip2
Version: 1.0.8
Description: bzip2 compression library
Requires: $REQUIRES

devel=\\
/include/bzlib.h \\
/lib/libbz2.so \\
/lib/pkgconfig/bzip2.pc

exec=\\
/bin/bunzip2 \\
/bin/bzcat \\
/bin/bzcmp \\
/bin/bzdiff \\
/bin/bzegrep \\
/bin/bzfgrep \\
/bin/bzgrep \\
/bin/bzip2 \\
/bin/bzip2recover \\
/bin/bzless \\
/bin/bzmore \\
/lib/libbz2.so.1
EOF

exit
