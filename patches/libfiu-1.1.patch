install libfiu/libfiu.so.1.* $DESTDIR/lib/libfiu.so.0
ln -sf libfiu.so.0 $DESTDIR/lib/libfiu.so
install preload/posix/fiu_posix_preload.so $DESTDIR/lib
install preload/run/fiu_run_preload.so $DESTDIR/lib
