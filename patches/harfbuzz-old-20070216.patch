# requires
REQUIRES="autotools-wrappers-lt-build freetype-build"

pkg-config --exists --print-errors $REQUIRES || exit 1

# configure (ac-2.61; am-1.9; lt-1.5.26)
libtoolize -c -f; aclocal -I .; autoconf; autoheader; automake -a -c
./configure --disable-static --prefix=

# build
make

# install
install -d $DESTDIR/bin
install src/.libs/harfbuzz-dump $DESTDIR/bin
install -d $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz.h $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz-buffer.h $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz-gdef.h $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz-global.h $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz-gpos.h $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz-gsub.h $DESTDIR/include/harfbuzz-old
install -m 644 src/harfbuzz-open.h $DESTDIR/include/harfbuzz-old
install -d $DESTDIR/include/harfbuzz-old/opentype
ln -sf ../harfbuzz.h $DESTDIR/include/harfbuzz-old/opentype/harfbuzz.h
install -d $DESTDIR/lib
install src/.libs/libharfbuzz-old.so.0.* $DESTDIR/lib/libharfbuzz-old.so.0
ln -sf libharfbuzz-old.so.0 $DESTDIR/lib/libharfbuzz-old.so
install -d $DESTDIR/lib/pkgconfig
install -m 644 harfbuzz-old.pc $DESTDIR/lib/pkgconfig

# build.pc
install -d $DESTDIR/share/pkgconfig
cat > $DESTDIR/share/pkgconfig/harfbuzz-old-build.pc << EOF
Name: harfbuzz-old
Version: 20070216
Description: OpenType text shaping library
Requires: $REQUIRES

devel=\\
/include/harfbuzz-old/harfbuzz.h \\
/include/harfbuzz-old/harfbuzz-buffer.h \\
/include/harfbuzz-old/harfbuzz-gdef.h \\
/include/harfbuzz-old/harfbuzz-global.h \\
/include/harfbuzz-old/harfbuzz-gpos.h \\
/include/harfbuzz-old/harfbuzz-gsub.h \\
/include/harfbuzz-old/harfbuzz-open.h \\
/include/harfbuzz-old/opentype/harfbuzz.h \\
/lib/libharfbuzz-old.so \\
/lib/pkgconfig/harfbuzz-old.pc

exec=\\
/bin/harfbuzz-dump \\
/lib/libharfbuzz-old.so.0
EOF

exit
