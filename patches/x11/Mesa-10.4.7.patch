# requires
REQUIRES="autotools-wrappers-lt-build bison-build gcc-g++-build libxext-build libxml2-build opengl-registry-build"

PKG_CONFIG_PATH=/x11/share/pkgconfig pkg-config --exists --print-errors $REQUIRES || exit 1

if PKG_CONFIG_PATH=/x11/share/pkgconfig pkg-config --exists libdrm-build; then
  PKG_CONFIG_PATH=/x11/share/pkgconfig pkg-config --print-requires libx11-build | grep -q libxcb-build || { echo libX11 with XCB support required; exit 1; }
  DRM=1
  DRI="--disable-nls --with-egl-platforms=x11,drm --without-dri-drivers"
  REQUIRES="$REQUIRES libdrm-build"
  pkg-config --exists libudev-build && REQUIRES="$REQUIRES libudev-build" || SYSFS=--enable-sysfs
else
  DRI="--disable-dri"
fi

# configure (ac-2.69; am-1.15; lt-2.4.5)
libtoolize -c -f; aclocal -I m4; autoconf; automake -a -c
PKG_CONFIG_PATH=/x11/lib/pkgconfig LDFLAGS=-Wl,-rpath,/x11/lib ./configure --disable-gallium-llvm $DRI --enable-gallium-egl --enable-gles1 --enable-gles2 --enable-xlib-glx $SYSFS --with-gallium-drivers=swrast --prefix=/x11

# build
make

# install
install -d $DESTDIR/x11/lib
install lib/libEGL.so.1 $DESTDIR/x11/lib/libmesaEGL.so.1
test $DRM && install lib/libgbm.so.1.* $DESTDIR/x11/lib/libmesagbm.so.1
install lib/libGL.so.1.* $DESTDIR/x11/lib/libmesaGL.so.1
install lib/libglapi.so.0.* $DESTDIR/x11/lib/libglapi.so.0
install lib/libGLESv1_CM.so.1.* $DESTDIR/x11/lib/libmesaGLESv1_CM.so.1
install lib/libGLESv2.so.2.* $DESTDIR/x11/lib/libmesaGLESv2.so.2
test $DRM && install -d $DESTDIR/x11/lib/dri
test $DRM && install lib/gallium/kms_swrast_dri.so $DESTDIR/x11/lib/dri
test $DRM && install lib/gallium/swrast_dri.so $DESTDIR/x11/lib/dri
install -d $DESTDIR/x11/lib/egl
install lib/egl/egl_gallium.so $DESTDIR/x11/lib/egl
test $DRM && install -d $DESTDIR/x11/lib/pkgconfig
test $DRM && install -m 644 src/mesa/drivers/dri/dri.pc $DESTDIR/x11/lib/pkgconfig

# build.pc
install -d $DESTDIR/x11/share/pkgconfig
cat > $DESTDIR/x11/share/pkgconfig/mesa-build.pc << EOF
Name: Mesa
Version: 10.4.7
Description: Mesa implementation of Khronos specifications
Requires: $REQUIRES

exec=\\
/x11/lib/libglapi.so.0 \\
/x11/lib/libmesaEGL.so.1 \\
EOF
test $DRM && echo /x11/lib/libmesagbm.so.1 \\ >> $DESTDIR/x11/share/pkgconfig/mesa-build.pc
cat >> $DESTDIR/x11/share/pkgconfig/mesa-build.pc << EOF
/x11/lib/libmesaGL.so.1 \\
/x11/lib/libmesaGLESv1_CM.so.1 \\
/x11/lib/libmesaGLESv2.so.2 \\
EOF
test $DRM && echo /x11/lib/dri/kms_swrast_dri.so \\ >> $DESTDIR/x11/share/pkgconfig/mesa-build.pc
test $DRM && echo /x11/lib/dri/swrast_dri.so \\ >> $DESTDIR/x11/share/pkgconfig/mesa-build.pc
echo /x11/lib/egl/egl_gallium.so \\ >> $DESTDIR/x11/share/pkgconfig/mesa-build.pc
test $DRM && echo /x11/lib/pkgconfig/dri.pc \\ >> $DESTDIR/x11/share/pkgconfig/mesa-build.pc
sed -i '$ s/ \\//' $DESTDIR/x11/share/pkgconfig/mesa-build.pc

exit
