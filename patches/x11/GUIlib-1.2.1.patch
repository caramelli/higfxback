# requires
REQUIRES="autotools-wrappers-lt-build sdl-build"

PKG_CONFIG_PATH=/x11/share/pkgconfig pkg-config --exists --print-errors $REQUIRES || exit 1

# configure (ac-2.59; am-1.9; lt-1.5.24)
libtoolize -c -f; aclocal; autoconf; automake -a -c
PKG_CONFIG_PATH=/x11/lib/pkgconfig LDFLAGS=-Wl,-rpath,/x11/lib ./configure --disable-static --with-testdatadir=/x11/share/GUI/test --prefix=/x11

# build
make

# install
install -d $DESTDIR/x11/include/GUI
install -m 644 GUI.h $DESTDIR/x11/include/GUI
install -m 644 GUI_C.h $DESTDIR/x11/include/GUI
install -m 644 GUI_area.h $DESTDIR/x11/include/GUI
install -m 644 GUI_button.h $DESTDIR/x11/include/GUI
install -m 644 GUI_font.h $DESTDIR/x11/include/GUI
install -m 644 GUI_generic.h $DESTDIR/x11/include/GUI
install -m 644 GUI_image.h $DESTDIR/x11/include/GUI
install -m 644 GUI_menu.h $DESTDIR/x11/include/GUI
install -m 644 GUI_scroll.h $DESTDIR/x11/include/GUI
install -m 644 GUI_scrollbar.h $DESTDIR/x11/include/GUI
install -m 644 GUI_status.h $DESTDIR/x11/include/GUI
install -m 644 GUI_termwin.h $DESTDIR/x11/include/GUI
install -m 644 GUI_widget.h $DESTDIR/x11/include/GUI
install -m 644 GUI_widgets.h $DESTDIR/x11/include/GUI
install -d $DESTDIR/x11/lib
install .libs/libGUI-1.2.so.0.* $DESTDIR/x11/lib/libGUI-1.2.so.0
ln -sf libGUI-1.2.so.0 $DESTDIR/x11/lib/libGUI.so
install -d $DESTDIR/x11/lib/pkgconfig
install -m 644 gui.pc $DESTDIR/x11/lib/pkgconfig
install -d $DESTDIR/x11/share/GUI/test
install .libs/hello $DESTDIR/x11/share/GUI/test
install -m 644 hello.bmp $DESTDIR/x11/share/GUI/test
install -m 644 hello2.bmp $DESTDIR/x11/share/GUI/test
install -m 644 scroll_dn.bmp $DESTDIR/x11/share/GUI/test
install -m 644 scroll_up.bmp $DESTDIR/x11/share/GUI/test

# build.pc
install -d $DESTDIR/x11/share/pkgconfig
cat > $DESTDIR/x11/share/pkgconfig/guilib-build.pc << EOF
Name: GUIlib
Version: 1.2.1
Description: Graphical User Interface library for SDL
Requires: $REQUIRES

devel=\\
/x11/include/GUI/GUI.h \\
/x11/include/GUI/GUI_C.h \\
/x11/include/GUI/GUI_area.h \\
/x11/include/GUI/GUI_button.h \\
/x11/include/GUI/GUI_font.h \\
/x11/include/GUI/GUI_generic.h \\
/x11/include/GUI/GUI_image.h \\
/x11/include/GUI/GUI_menu.h \\
/x11/include/GUI/GUI_scroll.h \\
/x11/include/GUI/GUI_scrollbar.h \\
/x11/include/GUI/GUI_status.h \\
/x11/include/GUI/GUI_termwin.h \\
/x11/include/GUI/GUI_widget.h \\
/x11/include/GUI/GUI_widgets.h \\
/x11/lib/libGUI.so \\
/x11/lib/pkgconfig/gui.pc

exec=\\
/x11/lib/libGUI-1.2.so.0 \\
/x11/share/GUI/test/hello \\
/x11/share/GUI/test/hello.bmp \\
/x11/share/GUI/test/hello2.bmp \\
/x11/share/GUI/test/scroll_dn.bmp \\
/x11/share/GUI/test/scroll_up.bmp
EOF

exit

