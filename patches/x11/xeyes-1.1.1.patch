# requires
REQUIRES="autotools-wrappers-am-build libxmu-build libxrender-build"

if ! PKG_CONFIG_PATH=/x11/share/pkgconfig pkg-config --exists --print-errors $REQUIRES; then exit 1; fi

# configure (ac-2.68; am-1.11)
aclocal; autoconf; autoheader; automake -a -c
PKG_CONFIG_PATH=/x11/lib/pkgconfig LDFLAGS=-Wl,-rpath,/x11/lib ./configure --prefix=/x11

# build
make

# install
install -d $DESTDIR/x11/bin
install xeyes $DESTDIR/x11/bin

# build.pc
install -d $DESTDIR/x11/share/pkgconfig
cat > $DESTDIR/x11/share/pkgconfig/xeyes-build.pc << EOF
Name: xeyes
Version: 1.1.1
Description: A follow the mouse X demo
Requires: $REQUIRES

exec=\\
/x11/bin/xeyes
EOF

exit
