# requires
REQUIRES="autotools-wrappers-lt-build zlib-build"

pkg-config --exists --print-errors $REQUIRES || exit 1

# configure (ac-2.71; am-1.16; lt-2.4.7)
libtoolize -c -f; aclocal; autoconf; autoheader; automake -a -c
./configure --disable-static --prefix=

# build
make

# install
install -d $DESTDIR/include
install -m 644 png.h $DESTDIR/include
install -m 644 pngconf.h $DESTDIR/include
install -m 644 pnglibconf.h $DESTDIR/include
install -d $DESTDIR/lib
install .libs/./libpng16.so.16.* $DESTDIR/lib/libpng16.so.16
ln -sf libpng16.so.16 $DESTDIR/lib/libpng16.so
ln -sf libpng16.so $DESTDIR/lib/libpng.so
install -d $DESTDIR/lib/pkgconfig
install -m 644 libpng16.pc $DESTDIR/lib/pkgconfig
ln -sf libpng16.pc $DESTDIR/lib/pkgconfig/libpng.pc

# build.pc
install -d $DESTDIR/share/pkgconfig
cat > $DESTDIR/share/pkgconfig/libpng-build.pc << EOF
Name: libpng
Version: 1.6.40
Description: PNG library
Requires: $REQUIRES

devel=\\
/include/png.h \\
/include/pngconf.h \\
/include/pnglibconf.h \\
/lib/libpng.so \\
/lib/libpng16.so \\
/lib/pkgconfig/libpng.pc \\
/lib/pkgconfig/libpng16.pc

exec=\\
/lib/libpng16.so.16
EOF

exit
