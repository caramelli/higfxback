REQUIRES="autotools-wrappers-ac-build readline-build"

pkg-config --exists --print-errors $REQUIRES || exit 1

# configure (ac-2.71)
autoconf
rm -rf lib/readline
./configure --without-bash-malloc --with-installed-readline --prefix=

# build
make

# install
install -d $DESTDIR/bin
install bash $DESTDIR/bin
ln -sf bash $DESTDIR/bin/ash
ln -sf bash $DESTDIR/bin/sh

# pkg-build.pc
install -d $DESTDIR/share/pkgconfig
cat > $DESTDIR/share/pkgconfig/bash-build.pc << EOF
Name: bash
Version: 5.2.37
Description: Bourne again shell
Requires: $REQUIRES

exec=\\
/bin/ash \\
/bin/bash \\
/bin/sh
EOF

exit

